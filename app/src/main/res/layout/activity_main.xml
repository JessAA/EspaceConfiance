<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    tools:context="com.example.usrmac_0238.mytf1.MainActivity">

    <Button
        android:id="@+id/mytf1_tv_legalinfo_trusted_environment_button"
        style="@style/TVButton.Big"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/mytf1_tv_legalinfo_trusted_environment_button_height"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:minWidth="@dimen/mytf1_tv_legalinfo_trusted_environment_button_min_width"
        android:text="@string/legalinfo_trusted_environment_button"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="8dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="8dp">

        <requestFocus/>
    </Button>

</android.support.constraint.ConstraintLayout>
